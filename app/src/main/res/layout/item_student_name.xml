<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvItemStudentName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbxMoreSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtItemStudentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:textColor="@color/dark_eq"
                    android:textSize="@dimen/txt_size_smal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llItemStudentName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnDeleteSabtenamStudentListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="حذف محصل"
                    android:textColor="@color/red_ios"
                    android:textSize="@dimen/txt_size_vsmal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnSendSmsStudentListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="ارسال پیام به محصل"
                    android:textColor="@color/blue_ios"
                    android:textSize="@dimen/txt_size_vsmal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnConfirmSabtenamStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="تایید کردن محصل"
                    android:textColor="@color/green_ios"
                    android:textSize="@dimen/txt_size_vsmal"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>