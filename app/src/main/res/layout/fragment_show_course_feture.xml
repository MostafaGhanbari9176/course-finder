<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_two"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/SDShowCourseFuture"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgBookMark"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon_book_marck_silver" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="128dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgFeature"
                                android:layout_width="@dimen/img_fragment_karbar"
                                android:layout_height="@dimen/img_fragment_karbar"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="40dp"
                                app:civ_border_color="@color/light"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txtTypeFeature"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="@dimen/txt_size_smal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgButtonShareCourseFuture"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon_share" />
                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="start"
                                        android:text="نام آموزشگاه"
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_xvsmal"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtMasterNameFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_vsmal"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:text="نام دوره "
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_xvsmal"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtNAmeFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_vsmal"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:gravity="center"
                                        android:text="تاریخ شروع "
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_xvsmal"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtStartDateFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_vsmal"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:gravity="center"
                                        android:text="تاریخ پایان "
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_xvsmal"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtEndDateFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_vsmal"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:gravity="center"
                                        android:text="شهریه "
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_xvsmal"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtMonyFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:inputType="numberDecimal"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_vsmal"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:gravity="center"
                                        android:text="رنج سنی "
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_xvsmal"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtRangeFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_vsmal"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:id="@+id/btnMoreDetailsShowFeature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_dark_eq"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgDropShowFeature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/icon_drop_down" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="جزییات بیشتر"
                                    android:textColor="@color/light"
                                    android:textSize="@dimen/txt_size_smal"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="16dp" >

                        <LinearLayout
                            android:id="@+id/MoreDetailsShowFeature"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:text="ظرفیت باقیمانده "
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_smal" />

                                    <TextView
                                        android:id="@+id/txtCapacityFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textColor="@color/text_item"
                                        android:textSize="@dimen/txt_size_smal" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:text="ساعت شروع "
                                        android:textColor="@color/light_eq" />

                                    <TextView
                                        android:id="@+id/txtHoursFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textColor="@color/dark_eq"
                                        android:textSize="@dimen/txt_size_smal" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:gravity="center"
                                        android:text="گروه"
                                        android:textColor="@color/light_eq" />

                                    <TextView
                                        android:id="@+id/txtTabagheFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_smal" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="16dp"
                                        android:gravity="center"
                                        android:text="ایام برگزاری"
                                        android:textColor="@color/light_eq"
                                        android:textSize="@dimen/txt_size_smal" />

                                    <TextView
                                        android:id="@+id/txtDayFeature"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginStart="16dp"
                                        android:background="@drawable/border_light_eq"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:padding="16dp"
                                        android:textSize="@dimen/txt_size_smal" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center"
                                    android:text="پیشنیاز "
                                    android:textColor="@color/dark_eq" />

                                <TextView
                                    android:id="@+id/txtsharayetFeature"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginStart="16dp"
                                    android:background="@drawable/border_light_eq"
                                    android:enabled="false"
                                    android:gravity="center"
                                    android:padding="16dp"
                                    android:textColor="@color/dark_eq"
                                    android:textSize="@dimen/txt_size_smal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center"
                                    android:text="توضیحات"
                                    android:textColor="@color/dark_eq" />

                                <TextView
                                    android:id="@+id/txtDescriptionCourseFuture"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginStart="16dp"
                                    android:background="@drawable/border_light_eq"
                                    android:enabled="false"
                                    android:gravity="center"
                                    android:padding="16dp"
                                    android:textColor="@color/dark_eq"
                                    android:textSize="@dimen/txt_size_smal" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <VideoView
                                android:id="@+id/videoView"
                                android:layout_width="match_parent"
                                android:layout_height="256dp"
                                android:visibility="gone" />

                            <ProgressBar
                                android:id="@+id/pBarVideoView"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/CVbtnPlayVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardBackgroundColor="@color/light_one"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    app:srcCompat="@drawable/icon_play" />

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:text="پخش ویدیویی گزارشی از دوره"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp">

                            <Button
                                android:id="@+id/btnRegisterShowFeature"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_dark_eq"
                                android:text="ثبت نام"
                                android:textColor="@color/light"
                                android:textSize="@dimen/txt_size_smal" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtNewsCourseFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="32dp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/red_ios"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRatBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ProgressBar
                            android:id="@+id/pbRatBarCourseFeature"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone" />

                        <RatingBar
                            android:id="@+id/ratBarShowCourseFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:numStars="5" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/txtConfirmRegistry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/border_red"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:rotation="-45"
            android:text="ثبت نام شما تایید شد"
            android:textColor="@color/pink_tel"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>