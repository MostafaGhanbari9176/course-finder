<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_ios"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Hacked Me"
        android:textColor="@color/light"
        android:textSize="@dimen/txt_size_vbig"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fouk You"
        android:textColor="@color/light"
        android:textSize="@dimen/txt_size_vbig"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_dark_eq"
        android:padding="16dp"
        android:text="گمشم بیرون"
        android:textColor="@color/red_ios" />

</LinearLayout>