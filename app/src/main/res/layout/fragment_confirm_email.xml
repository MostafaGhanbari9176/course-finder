<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    app:cardBackgroundColor="@color/light_two">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="انتخاب کنید : "
                                android:textColor="@color/dark_eq"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rbLogInWithEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:text="ورود"
                                    android:textColor="@color/dark_eq"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:text="یا"
                                    android:textColor="@color/dark_eq"
                                    android:textStyle="bold" />

                                <RadioButton
                                    android:id="@+id/rbLogUpWithEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:checked="true"
                                    android:text="ثبت نام"
                                    android:textColor="@color/dark_eq"
                                    android:textStyle="bold" />
                            </RadioGroup>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/RLNameEmailConfirm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="32dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtNameConfirmEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="48dp"
                                android:background="@drawable/border_light_eq"
                                android:ems="10"
                                android:gravity="start"
                                android:hint="نام ونام خانوادگی"
                                android:inputType="textMultiLine"
                                android:maxLength="50"
                                android:padding="16dp"
                                android:textColor="@color/dark_eq"
                                android:textColorHint="@color/light_eq"
                                android:textColorLink="@color/dark_eq"
                                android:textSize="@dimen/txt_submit_iformation" />

                            <ImageView
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:layout_alignParentEnd="false"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/icon_txtshort" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtEmailConfirmٍEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="48dp"
                                android:background="@drawable/border_light_eq"
                                android:ems="10"
                                android:gravity="start"
                                android:hint="آدرس ایمیل"
                                android:inputType="textMultiLine"
                                android:maxLength="100"
                                android:padding="16dp"
                                android:textColor="@color/dark_eq"
                                android:textColorHint="@color/light_eq"
                                android:textColorLink="@color/dark_eq"
                                android:textSize="@dimen/txt_submit_iformation" />

                            <ImageView
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:layout_alignParentEnd="false"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/icon_txtshort" />

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="18dp">

                            <Button
                                android:id="@+id/btnConfirmEmailConfirmEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="8dp"
                                android:text="تایید ایمیل"
                                android:textSize="@dimen/txt_size_smal"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    app:cardBackgroundColor="@color/light_two">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtSmsCodeConfirmEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="48dp"
                                android:background="@drawable/border_light_eq"
                                android:ems="10"
                                android:gravity="start"
                                android:hint="کد تایید"
                                android:inputType="textPersonName"
                                android:maxLength="50"
                                android:maxLines="1"
                                android:padding="16dp"
                                android:textColor="@color/dark_eq"
                                android:textColorHint="@color/light_eq"
                                android:textColorLink="@color/dark_eq"
                                android:textSize="@dimen/txt_submit_iformation" />

                            <ImageView
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:layout_alignParentEnd="false"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/icon_txtshort" />

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="18dp">

                            <Button
                                android:id="@+id/btnConfirmCodeConfirmEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="8dp"
                                android:text="بررسی صحت کد"
                                android:textSize="@dimen/txt_size_smal"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardBackgroundColor="@color/dark_eq">

                        <Button
                            android:id="@+id/btnResendEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_dark_eq"
                            android:enabled="true"
                            android:padding="16dp"
                            android:text="ارسال مجدد ایمیل"
                            android:textColor="@color/light"
                            android:textSize="@dimen/txt_size_smal"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rlPbarFragmentConfirmEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:alpha="0.5"
                android:background="@color/dark_eq"
                android:orientation="horizontal"></LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>