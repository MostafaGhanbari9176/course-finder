<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemTabaghe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTabagheNameItem"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:padding="4dp"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_vsmal" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgItemTabaghe"
                android:layout_width="@dimen/img_item_tabaghe"
                android:layout_height="@dimen/img_item_tabaghe"
                android:layout_margin="4dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>