<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="66dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp">

                        <FrameLayout
                            android:id="@+id/contentProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_alignParentStart="true"
                            android:layout_marginTop="68dp">

                        </FrameLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/light"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp">

                            <ImageView
                                android:id="@+id/imgProfile"
                                android:layout_width="@dimen/img_fragment_karbar"
                                android:layout_height="@dimen/img_fragment_karbar" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="136dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"

                            android:layout_margin="2dp"
                            android:layout_weight="0"
                            app:cardBackgroundColor="@color/light_green">

                            <Button

                                android:id="@+id/btnLogOut"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_power" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="2dp"

                            android:layout_weight="0"
                            app:cardBackgroundColor="@color/light_green">

                            <Button
                                android:id="@+id/btnCourseListProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_list" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="2dp"

                            android:layout_weight="0"
                            app:cardBackgroundColor="@color/light_green">

                            <Button
                                android:id="@+id/btnMapProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_map" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAddCourseProfile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="2dp"

                            android:layout_weight="0"
                            app:cardBackgroundColor="@color/light_green">

                            <Button
                                android:id="@+id/btnAddCourseProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_add" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTrendingUpProfile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="2dp"

                            android:layout_weight="0"
                            app:cardBackgroundColor="@color/light_green">

                            <Button
                                android:id="@+id/btnTrendingUpProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_trending_up" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAddCourseListProfile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="2dp"

                            android:layout_weight="0"
                            app:cardBackgroundColor="@color/light_green">

                            <Button
                                android:id="@+id/btnAddCourseListProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_list_addcourse" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>