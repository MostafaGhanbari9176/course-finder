<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_eq">

                <RelativeLayout
                    android:id="@+id/rlUploadMadrak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="136dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUploadMadrak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="بارگذاری مدرک آموزشی"
                        android:textColor="@color/light"
                        android:textSize="@dimen/txt_size_smal"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="66dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        app:cardBackgroundColor="@color/dark_eq">

                        <FrameLayout
                            android:id="@+id/contentProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_alignParentStart="true"
                            android:layout_marginTop="68dp">

                        </FrameLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/dark_eq">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/imgProfile"
                                        android:layout_width="@dimen/img_fragment_karbar"
                                        android:layout_height="@dimen/img_fragment_karbar" />

                                    <RatingBar
                                        android:id="@+id/ratBarProfile"
                                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:numStars="5"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="136dp"
                    android:layout_marginRight="4dp"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:rotation="-20">

                        <LinearLayout
                            android:id="@+id/llAddCourseProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:rotation="20">

                            <Button
                                android:id="@+id/btnAddCourseProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:rotation="20">

                            <Button
                                android:id="@+id/btnSabtenamListProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_list" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llMapProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:rotation="20">

                            <Button
                                android:id="@+id/btnMapProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_map" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnMessageBoxProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_message_box" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:rotation="20">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:rotation="-20">

                            <Button

                                android:id="@+id/btnLogOut"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_power" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llTrendingUpProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:rotation="-20">

                            <Button
                                android:id="@+id/btnTrendingUpProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_trending_up" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAddCourseListProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:rotation="-20">

                            <Button
                                android:id="@+id/btnCourseListProfile"
                                android:layout_width="@dimen/btn_nav"
                                android:layout_height="@dimen/btn_nav"
                                android:background="@drawable/icon_list_sabtenam" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>