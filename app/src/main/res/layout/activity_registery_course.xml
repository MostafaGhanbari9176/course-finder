<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_two"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tlbCourseRegistery"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtSubjectRegisteryCourse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="48dp"
                            android:background="@drawable/border_light_eq"
                            android:gravity="center|start"
                            android:hint="عنوان دوره "
                            android:inputType="textMultiLine"
                            android:maxLength="200"
                            android:padding="16dp"
                            android:textColor="@color/dark_eq"
                            android:textColorHint="@color/light_eq" />

                        <ImageView
                            android:layout_width="@dimen/btn_nav"
                            android:layout_height="@dimen/btn_nav"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/icon_txtshort" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtsharayetRegisteryCourse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="48dp"
                            android:background="@drawable/border_light_eq"
                            android:gravity="center|start"
                            android:hint="شرایط و پیش نیاز ها "
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:padding="16dp"
                            android:textColor="@color/dark_eq"
                            android:textColorHint="@color/light_eq"
                            android:textSize="@dimen/txt_submit_iformation" />

                        <ImageView
                            android:layout_width="@dimen/btn_nav"
                            android:layout_height="@dimen/btn_nav"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/icon_txtshort" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtMonyRegisteryCourse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_light_eq"
                            android:ems="10"
                            android:gravity="center|start"
                            android:hint="شهریه(تومان)"
                            android:inputType="number"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:padding="16dp"
                            android:textColor="@color/dark_eq"
                            android:textColorHint="@color/light_eq"
                            android:textSize="@dimen/txt_submit_iformation" />

                        <ImageView
                            android:layout_width="@dimen/btn_nav"
                            android:layout_height="@dimen/btn_nav"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/icon_mony" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtMinRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_light_eq"
                            android:ems="10"
                            android:gravity="center|start"
                            android:hint="کمترین سن"
                            android:inputType="number"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:padding="16dp"
                            android:textColor="@color/dark_eq"
                            android:textColorHint="@color/light_eq"
                            android:textSize="@dimen/txt_submit_iformation" />

                        <ImageView
                            android:layout_width="@dimen/btn_nav"
                            android:layout_height="@dimen/btn_nav"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/icon_range" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtMaxRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_light_eq"
                            android:ems="10"
                            android:gravity="center|start"
                            android:hint="بیشترین سن"
                            android:inputType="number"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:padding="16dp"
                            android:textColor="@color/dark_eq"
                            android:textColorHint="@color/light_eq"
                            android:textSize="@dimen/txt_submit_iformation" />

                        <ImageView
                            android:layout_width="@dimen/btn_nav"
                            android:layout_height="@dimen/btn_nav"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/icon_range" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtCapacityRegisteryCourse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_light_eq"
                            android:ems="10"
                            android:gravity="center|start"
                            android:hint="ظرفیت(نفر)"
                            android:inputType="number"
                            android:maxLength="9"
                            android:maxLines="1"
                            android:padding="16dp"
                            android:textColor="@color/dark_eq"
                            android:textColorHint="@color/light_eq"
                            android:textSize="@dimen/txt_submit_iformation" />

                        <ImageView
                            android:layout_width="@dimen/btn_nav"
                            android:layout_height="@dimen/btn_nav"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/icon_range" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtTozihatRegisteryCourse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="48dp"
                            android:background="@drawable/border_light_eq"
                            android:gravity="center|start"
                            android:hint="توضیحات "
                            android:inputType="textMultiLine"
                            android:maxLength="1000"
                            android:padding="16dp"
                            android:textColor="@color/dark_eq"
                            android:textColorHint="@color/light_eq"
                            android:textSize="@dimen/txt_submit_iformation" />

                        <ImageView
                            android:layout_width="@dimen/btn_nav"
                            android:layout_height="@dimen/btn_nav"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/icon_txtshort" />

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:text="شیوه تدریس"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_smal"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blue_eq">

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="64dp"
                android:gravity="center|start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbxPublicCurceRegisteryCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="تدریس عمومی(آموزشگاه)"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/txt_size_smal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbxSingleCurceRegisteryCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="تدریس خصوصی"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/txt_size_smal" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp">

                <Button
                    android:id="@+id/btnDaysRejistery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="انتخاب ایام برگزاری"
                    android:textColor="@color/dark_eq"
                    android:textSize="@dimen/txt_submit_iformation" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp">

                <Button
                    android:id="@+id/btnStartDateRegisteryCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="انتخاب تاریخ شروع دوره"
                    android:textColor="@color/dark_eq"
                    android:textSize="@dimen/txt_submit_iformation" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp">

                <Button
                    android:id="@+id/btnEndDateRegisteryCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="انتخاب تاریخ پایان دوره"
                    android:textColor="@color/dark_eq"
                    android:textSize="@dimen/txt_submit_iformation" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp">

                <Button
                    android:id="@+id/btnChooseTimeRegisteryCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="انتخاب ساعت برگزاری"
                    android:textColor="@color/dark_eq"
                    android:textSize="@dimen/txt_submit_iformation" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp">

                <Button
                    android:id="@+id/btnChoseTabaghe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="دسته بندی"
                    android:textColor="@color/dark_eq"
                    android:textSize="@dimen/txt_submit_iformation" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <Button
                    android:id="@+id/btnSaveRegisteryRegisteryCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_dark_eq"
                    android:padding="16dp"
                    android:text="ذخیره اطلاعات"
                    android:textColor="@color/light"
                    android:textSize="@dimen/txt_size_smal" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>